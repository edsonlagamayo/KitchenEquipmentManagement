<Window x:Class="KitchenEquipmentManagement.Views.SignupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kitchen Equipment Management - Sign Up"
        Width="450" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f8f9fa">
        <Border Background="White" 
                CornerRadius="8" 
                Margin="30" 
                Padding="40"
                Effect="{StaticResource DropShadowEffect}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Create New Account" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               Foreground="#2c3e50"/>

                    <!-- First Name -->
                    <Label Content="First Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" Height="40" FontSize="14"
                             BorderBrush="#ced4da" BorderThickness="1"/>

                    <!-- Last Name -->
                    <Label Content="Last Name:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" Height="40" FontSize="14"
                             BorderBrush="#ced4da" BorderThickness="1"/>

                    <!-- Email Address -->
                    <Label Content="Email Address:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" Height="40" FontSize="14"
                             BorderBrush="#ced4da" BorderThickness="1"/>

                    <!-- Username -->
                    <Label Content="Username:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="10" Height="40" FontSize="14"
                             BorderBrush="#ced4da" BorderThickness="1"/>

                    <!-- User Type -->
                    <Label Content="User Type:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <ComboBox ItemsSource="{Binding UserTypes}"
                              SelectedItem="{Binding SelectedUserType}"
                              Padding="10" Height="40" FontSize="14"
                              BorderBrush="#ced4da" BorderThickness="1"/>

                    <!-- Password -->
                    <Label Content="Password:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Padding="10" Height="40" FontSize="14"
                                 BorderBrush="#ced4da" BorderThickness="1"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Confirm Password -->
                    <Label Content="Confirm Password:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Padding="10" Height="40" FontSize="14"
                                 BorderBrush="#ced4da" BorderThickness="1"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               FontSize="12" 
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Sign Up Button -->
                    <Button Content="Create Account" 
                            Command="{Binding SignupCommand}"
                            Height="45" 
                            Margin="0,20,0,0"
                            Background="#28a745"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#218838"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Progress Bar -->
                    <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                                 Height="4" 
                                 Margin="0,10,0,0"
                                 Background="Transparent"
                                 Foreground="#28a745"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Back to Login Button -->
                    <Button Content="Back to Login" 
                            Command="{Binding BackToLoginCommand}"
                            Height="40" 
                            Margin="0,15,0,0"
                            Background="Transparent"
                            Foreground="#6c757d"
                            BorderBrush="#6c757d"
                            BorderThickness="1"
                            FontSize="13"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>