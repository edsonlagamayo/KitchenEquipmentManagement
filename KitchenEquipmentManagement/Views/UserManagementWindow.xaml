<Window x:Class="KitchenEquipmentManagement.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:KitchenEquipmentManagement.Views"
        Title="User Management - Kitchen Equipment Management"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="800" MinHeight="600">

    <Grid Background="#ecf0f1" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2c3e50" 
                CornerRadius="8,8,0,0"
                Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="👥" 
                           FontSize="24" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Text="User Management System" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <Button Content="Close" 
                        Click="CloseButton_Click"
                        Style="{StaticResource DangerButtonStyle}"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="0,0,8,8"
                Padding="0">
            <local:UserMaintenanceView/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#34495e" 
                CornerRadius="0,0,8,8"
                Padding="15,10">
            <TextBlock Text="Kitchen Equipment Management System v1.0 - User Management Module" 
                       Foreground="#95a5a6" 
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>