<Window x:Class="KitchenEquipmentManagement.Views.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kitchen Equipment Management - Admin Dashboard"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Kitchen Equipment Management" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- User Info and Navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentUserName}" 
                               Foreground="White" 
                               FontSize="14" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="|" 
                               Foreground="#95a5a6" 
                               FontSize="14" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding CurrentUserType}" 
                               Foreground="#95a5a6" 
                               FontSize="12" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>

                    <!-- Navigation Buttons -->
                    <Button Content="Users" 
                            Command="{Binding UsersCommand}"
                            Style="{StaticResource HeaderButtonStyle}"
                            Visibility="{Binding IsSuperAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <Button Content="Sites" 
                            Command="{Binding SitesCommand}"
                            Style="{StaticResource HeaderButtonStyle}"/>

                    <Button Content="Equipment" 
                            Command="{Binding EquipmentCommand}"
                            Style="{StaticResource HeaderButtonStyle}"/>

                    <Button Content="Logout" 
                            Command="{Binding LogoutCommand}" 
                            Background="#dc3545"
                            Margin="10,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
                                <Setter Property="Background" Value="#dc3545"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c82333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Background="#ecf0f1" Padding="20">
            <ContentControl Content="{Binding CurrentContent}"/>
        </Border>
    </Grid>
</Window>