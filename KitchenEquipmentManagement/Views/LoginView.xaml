<Window x:Class="KitchenEquipmentManagement.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KitchenEquipmentManagement.Views"
        mc:Ignorable="d"
        Title="Kitchen Equipment Management - Login"
        Width="400" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#f8f9fa">
        <Border Background="White" 
                CornerRadius="8" 
                Margin="30" 
                Padding="40"
                Effect="{StaticResource DropShadowEffect}">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Kitchen Equipment Management" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"
                           Foreground="#2c3e50"/>

                <TextBlock Text="Please login to continue" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"
                           Foreground="#6c757d"/>

                <!-- Username -->
                <Label Content="Username:" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Height="40" 
                         FontSize="14"
                         BorderBrush="#ced4da"
                         BorderThickness="1"/>

                <!-- Password -->
                <Label Content="Password:" 
                       FontWeight="SemiBold" 
                       Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Padding="10" 
                             Height="40" 
                             FontSize="14"
                             BorderBrush="#ced4da"
                             BorderThickness="1"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           FontSize="12" 
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="Login" 
                        Command="{Binding LoginCommand}"
                        Height="45" 
                        Margin="0,20,0,0"
                        Background="#007bff"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0056b3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Progress Bar -->
                <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                             Height="4" 
                             Margin="0,10,0,0"
                             Background="Transparent"
                             Foreground="#007bff"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Divider -->
                <Border Height="1" 
                        Background="#e9ecef" 
                        Margin="0,30,0,20"/>

                <!-- Signup Button -->
                <Button Content="Create New Account" 
                        Command="{Binding SignupCommand}"
                        Height="40" 
                        Background="Transparent"
                        Foreground="#6c757d"
                        BorderBrush="#6c757d"
                        BorderThickness="1"
                        FontSize="13"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f8f9fa"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Exit Button -->
                <Button Content="Exit" 
                        Command="{Binding ExitCommand}"
                        Height="35" 
                        Margin="0,10,0,0"
                        Background="Transparent"
                        Foreground="#dc3545"
                        BorderThickness="0"
                        FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#c82333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
