<Window x:Class="KitchenEquipmentManagement.Views.SiteEquipmentMaintenanceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Site Equipment Management"
        Width="900" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Background="#f8f9fa" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#2c3e50">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Equipment Management for: {0}">
                        <Binding Path="SiteName"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Equipment -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Available Equipment" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding AvailableEquipment}"
                              SelectedItem="{Binding SelectedAvailableEquipment}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              AlternatingRowBackground="#f8f9fa">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Serial" Binding="{Binding SerialNumber}" Width="100"/>
                            <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" 
                            Content="Add to Site →" 
                            Command="{Binding AddEquipmentCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0"/>
                </Grid>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Vertical" 
                        VerticalAlignment="Center" 
                        Margin="20,0">
                <Button Content="→" 
                        Command="{Binding AddEquipmentCommand}"
                        Width="50" Height="40" 
                        FontSize="16" FontWeight="Bold"
                        Style="{StaticResource SuccessButtonStyle}"
                        Margin="0,0,0,10"/>
                <Button Content="←" 
                        Command="{Binding RemoveEquipmentCommand}"
                        Width="50" Height="40" 
                        FontSize="16" FontWeight="Bold"
                        Style="{StaticResource DangerButtonStyle}"/>
            </StackPanel>

            <!-- Assigned Equipment -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Assigned Equipment" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding AssignedEquipment}"
                              SelectedItem="{Binding SelectedAssignedEquipment}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              AlternatingRowBackground="#f8f9fa">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Serial" Binding="{Binding SerialNumber}" Width="100"/>
                            <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" 
                            Content="← Remove from Site" 
                            Command="{Binding RemoveEquipmentCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Close Button -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>