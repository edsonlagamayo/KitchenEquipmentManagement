<UserControl x:Class="KitchenEquipmentManagement.Views.EquipmentMaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Equipment Management" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#2c3e50"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Equipment List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="0,0,0,15">
                        <TextBlock Text="My Equipment" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <Button Content="Add New Equipment" 
                                Command="{Binding AddCommand}"
                                Style="{StaticResource SuccessButtonStyle}"
                                Margin="20,0,0,0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Equipment}"
                              SelectedItem="{Binding SelectedEquipment}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              AlternatingRowBackground="#f8f9fa">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" Width="150"/>
                            <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="100"/>
                            <DataGridTextColumn Header="Current Site" 
                                                Binding="{Binding CurrentSiteDescription}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,15,0,0">
                        <Button Content="Edit" 
                                Command="{Binding EditCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Delete" 
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="10" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" 
                          Background="Transparent"/>

            <!-- Add/Edit Form -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}"
                    Visibility="{Binding IsFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} Equipment">
                                <Binding Path="IsAddMode" 
                                         Converter="{StaticResource BooleanToStringConverter}" 
                                         ConverterParameter="Add,Edit"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <!-- Serial Number -->
                    <Label Content="Serial Number:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,15"/>

                    <!-- Description -->
                    <Label Content="Description:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,15"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>

                    <!-- Condition -->
                    <Label Content="Condition:" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding Conditions}"
                              SelectedItem="{Binding SelectedCondition}"
                              Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save" 
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource SuccessButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Cancel" 
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                Background="#f8d7da" 
                BorderBrush="#f5c6cb" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,20,0,0"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#721c24" 
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>