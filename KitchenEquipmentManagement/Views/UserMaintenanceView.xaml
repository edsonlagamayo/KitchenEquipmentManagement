<UserControl x:Class="KitchenEquipmentManagement.Views.UserMaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="User Management" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#2c3e50"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Users List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Registered Users" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Users}"
                              SelectedItem="{Binding SelectedUser}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              AlternatingRowBackground="#f8f9fa">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding UserName}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="200"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding UserType}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,15,0,0">
                        <Button Content="Edit" 
                                Command="{Binding EditCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Delete" 
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="10" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" 
                          Background="Transparent"/>

            <!-- Edit Form -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Edit User" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,20"/>

                        <!-- First Name -->
                        <Label Content="First Name:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,10"/>

                        <!-- Last Name -->
                        <Label Content="Last Name:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,10"/>

                        <!-- Email -->
                        <Label Content="Email Address:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,10"/>

                        <!-- Username -->
                        <Label Content="Username:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,10"/>

                        <!-- User Type -->
                        <Label Content="User Type:" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding UserTypes}"
                                  SelectedItem="{Binding SelectedUserType}"
                                  Margin="0,0,0,10"/>

                        <!-- New Password -->
                        <Label Content="New Password (leave blank to keep current):" FontWeight="SemiBold"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Margin="0,0,0,20"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Save" 
                                    Command="{Binding SaveCommand}"
                                    Style="{StaticResource SuccessButtonStyle}"
                                    Margin="0,0,10,0"/>
                            <Button Content="Cancel" 
                                    Command="{Binding CancelCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                Background="#f8d7da" 
                BorderBrush="#f5c6cb" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,20,0,0"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#721c24" 
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>